<h3 align='center' class="mt-4 mb-4">Login</h3>
<div class="container">
  <%= form_for(:session, :html => {class: 'shadow p-3 mb-3 bg-info rounded', role: 'form'}, url: login_path) do |f| %>

    <div class="form-group row justify-content-center">
      <label for="email" class="col-sm-2 col-form-label text-light">Email:</label>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control shadow rounded", id: "email", placeholder: "Enter Email" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label for="password" class="col-sm-2 col-form-label text-light">Password:</label>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control shadow rounded", id: "password", placeholder: "Enter Password", autofill: false %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-sm-10 offset-4">
        <%= f.submit 'Log in', class: "btn btn-outline-light btn-lg" %>
      </div>
    </div>

  <% end %>
</div>