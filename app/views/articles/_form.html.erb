<%= render "shared/errors", obj: @article %>

<%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

  <div class="form-group row justify-content-center">
    <label for="title" class="col-sm-2 col-form-label text-light">Title:</label>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control shadow rounded", id: "title", placeholder: "Enter Title" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <label for="description" class="col-sm-2 col-form-label text-light">Description:</label>
    <div class="col-sm-8">
      <%= f.text_area :description , class: "form-control shadow rounded", id: "description", rows: 5, placeholder: "Enter Description" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <div class="col-sm-10 offset-4">
      <%= f.submit  class: "btn btn-outline-light btn-lg"%>
    </div>
  </div>

<% end %>