<div class="container">
  <div class="row">
    <div class="col-8">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= "#{name}" %> alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
