<h3 class="text-center mt-4">The Bloggers</h3>
<div class="text-center mt-4">
  <%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="card card-body bg-light col-4 offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <div class='container'>
              <%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
